<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.mapper.AdminUserMapper">

	<resultMap id="BaseResultMap" type="com.stone.model.AdminUser">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
        <result column="application_server" property="applicationServer" />
    </resultMap>
    
    <resultMap id="associationResultMap" type="com.stone.model.AdminUser">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
        <association property="applicationServer" 
        	select="com.stone.mapper.ApplicationServerMapper.selectById"
	    	column="application_server">
		</association>
    </resultMap>

    <select id="countAdminUser" resultType="int">
        select count(1) from admin_user 
    </select>

	<select id="selectById" resultMap="BaseResultMap">
        select * from admin_user where id = #{id} 
    </select>


</mapper>